//stl way
#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   //   Write your code here
   sort(arr,arr+n);
}
//better
#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   //   Write your code here
   int c0=0,c1=0,c2=0;
    for(int i=0;i<n;i++){
       if(arr[i]==0){
          c0++;
       }
       if(arr[i]==1){
          c1++;
       }
       if(arr[i]==2){
          c2++;
       }
    }
    for(int i=0;i<c0;i++)arr[i]=0;
    for(int i=c0;i<c0+c1;i++)arr[i]=1;
    for(int i=c0+c1;i<c0+c1+c2;i++)arr[i]=2;
}
//optimal
class Solution {
public:
    void sortColors(vector<int>& nums) {
        int n=nums.size();
        int m=0,l=0,h=n-1;
        while(m<=h)
        {
            if(nums[m]==0){
                swap(nums[l],nums[m]);
                m++;
                l++;
            }
            else if(nums[m]==1){
                m++;
            }
            else if(nums[m]==2){
                swap(nums[m],nums[h]);
                h--;
            }
        }
       
        
    }
};
